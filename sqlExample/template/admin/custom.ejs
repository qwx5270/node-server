<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="../layuiadmin/layui/css/layui.css" media="all">
  <title>custom</title>
</head>
<body>
  <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
  <legend>添加custom</legend>
  </fieldset>
  <form action="?" method="post" enctype="multipart/form-data">
    <div class="layui-form-item">
      <label class="layui-form-label">标题</label>
      <div class="layui-input-block">
        <input type="text" class="layui-input" name="title" lay-verify="required" autocomplete="off" placeholder="请输入标题">
      </div>
    </div>
    <div class="layui-form-item layui-form-text">
      <label class="layui-form-label">描述</label>
      <div class="layui-input-block">
        <textarea class="layui-textarea" name="description" lay-verify="required" placeholder="请输入内容"></textarea>
      </div>
    </div>
    <div class="layui-form-item">
      <div class="layui-form-label">用户头像</div>
      <div class="layui-input-block">
        <input type="file" name="src">
      </div>
    </div>
    <div class="layui-form-item">
      <div class="layui-input-block">
         <button class="layui-btn" lay-submit>添加</button>
      </div>
    </div>
  </form>

  <div class="layui-form" style="margin-bottom: 20px;">
    <table class="layui-table" lay-size="lg" style="height: 100px;">
      <colgroup>
        <col width="30px">
        <col height="100px">
        <col>
        <col width="100px">
        <col width="100px">
      </colgroup>
      <thead>
        <tr>
          <th>ID</th>
          <th>标题</th>
          <th>描述</th>
          <th>用户头像</th>
          <th>操作</th>
        </tr>
      </thead>

      <tbody>
        <% for(var i=0; i<evaluation.length; i++) { %>
        <tr>
          <td><%= evaluation[i].ID %></td>
          <td><%= evaluation[i].title %></td>
          <td><%= evaluation[i].description %></td>
          <td><img width="64px" height="64px" src="/upload/<%= evaluation[i].src %>" alt="头像"></td>
          <td>
            <a class="layui-btn layui-btn-xs" href="?act=mod&id=<%= evaluation[i].ID %>">修改</a>
            <br>
            <a class="layui-btn layui-btn-danger layui-btn-xs" href="?act=del&id=<%= evaluation[i].ID %>"
                       onclick="return confirm('你确定要删除吗? ')">删除</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <% if(typeof cus_data != 'undefined') { %>
    <div style="margin: 20px;">
      <fieldset class="layui-elem-field layui-field-title" style="margin-top: 30px;">
        <legend>修改信息</legend>
      </fieldset>
      <form action="?" method="post" enctype="multipart/form-data">
          <input type="hidden" name="cus_id" value="<%= cus_data.ID %>"/>
          标题: <input type="text" name="title" class="layui-input" value="<%= cus_data.title %>"/><br />
          描述: <textarea name="description" cols="32" rows="5" class="layui-textarea"><%= cus_data.description %></textarea><br />
          用户头像: <input type="file" name='src' value="<%= cus_data.src %>"/><br /><br />
          <button class="layui-btn" lay-submit >修改</button>
          <a href="/admin/custom" class="layui-btn">取消修改</a>
          </form>
    </div>
  <% } %>

  <script src="../layuiadmin/layui/layui.js"></script>
</body>

</html>
